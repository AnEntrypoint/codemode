{
  "$schema": "https://schemas.modelcontextprotocol.io/0.1.0/mcp.json",
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["index.js"]
    },
    "codeMode": {
      "command": "node",
      "args": ["code-mode.js"]
    },
    "glootie": {
      "command": "npx",
      "args": ["-y", "mcp-glootie@latest"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "vexify": {
      "command": "npx",
      "args": ["-y", "vexify@latest", "mcp"]
    }
  }
}